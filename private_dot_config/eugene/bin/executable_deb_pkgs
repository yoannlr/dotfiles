#!/bin/sh

action="$1"
pkgName="$2"
pkgURL="$3"

case "$action" in
	"add")
		file="/tmp/${pkgName}.deb"
		if ! dpkg -l | grep -qw "$pkgName"; then
			wget -O "$file" "$pkgURL"
			sudo apt install "$file"
			rm "$file"
		fi
	;;
	"remove")
		sudo apt purge --autoremove "$pkgName"
	;;
	*)
	echo "Unknown action $action"
	exit 1
esac
